@model PainelCovid19.Models.DadosCovid

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastrar Dados</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CasosConfirmados" class="control-label"></label>
                <input asp-for="CasosConfirmados" class="form-control" />
                <span asp-validation-for="CasosConfirmados" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mortes" class="control-label"></label>
                <input asp-for="Mortes" class="form-control" />
                <span asp-validation-for="Mortes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recuperados" class="control-label"></label>
                <input asp-for="Recuperados" class="form-control" />
                <span asp-validation-for="Recuperados" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaisId" class="control-label"></label>
                <select asp-for="PaisId" class ="form-control" asp-items="ViewBag.PaisId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a tabela</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
