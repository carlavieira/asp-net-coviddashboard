@model IEnumerable<PainelCovid19.Models.DadosCovid>

@{
    ViewData["Title"] = "Index";
}

<h1>Dados COVID 2020</h1>
@if (User.Identity.IsAuthenticated)
{
    <button type="button" class="btn btn-success btn-sm">
        <a asp-action="Create">Cadastar novo dado</a>
    </button>
    <p>

    </p>
}
    <table class="table table-striped table-sm">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Pais)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CasosConfirmados)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Mortes)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Recuperados)
                </th>
                @if (User.Identity.IsAuthenticated)
                {
                    <th></th>

                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pais.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CasosConfirmados)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mortes)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Recuperados)
                    </td>
                    @if (User.Identity.IsAuthenticated)
                    {
                <td>
                    <button type="button" class="btn btn-warning btn-sm">
                        <a asp-action="Edit" asp-route-id="@item.Codigo">Editar</a>
                    </button>
                    <button type="button" class="btn btn-info btn-sm">
                        <a asp-action="Details" asp-route-id="@item.Codigo">Detalhes</a>
                    </button>
                    <button type="button" class="btn btn-danger btn-sm">
                        <a asp-action="Delete" asp-route-id="@item.Codigo">Deletar</a>
                    </button>
                </td>
                    }
                </tr>
            }
        </tbody>
    </table>
